{
  "manifest_version": 3,
  "name": "Host Cache Cleaner",
  "description": "清除host cache和刷新socket pools，A chrome extension that clears host cache and flushes socket pools",
  "version": "2.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "清除host cache和刷新socket pools"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "chrome://net-internals/*"
  ]
}
